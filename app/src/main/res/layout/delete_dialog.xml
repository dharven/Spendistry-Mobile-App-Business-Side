<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="14dp"
    app:strokeColor="@color/mainBlue"
    app:strokeWidth="1dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@color/windowBlue"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Are you sure you want to delete this item?"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/barcode_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:paddingStart="40dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/item_name_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:paddingStart="40dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/item_price_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:paddingStart="40dp"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_delete_btn"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/mainBlue"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:text="cancel" />

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/mainBlue"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="delete" />
    </LinearLayout>
</LinearLayout>
</com.google.android.material.card.MaterialCardView>