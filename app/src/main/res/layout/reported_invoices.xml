<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:strokeWidth="0dp"
    app:cardElevation="16dp"
    app:cardCornerRadius="12dp"
    android:layout_margin="8dp"
    android:id="@+id/reported_card"
    app:cardBackgroundColor="@color/cardBlue"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="6dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mainBlue"
            android:layout_marginTop="6dp"
            android:id="@+id/client_name"
            tools:text="Client: Shashank Mistry"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mainBlue"
            android:layout_marginTop="6dp"
            android:id="@+id/client_email"
            tools:text="Email: shashank@gmail.com"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mainBlue"
            android:id="@+id/client_phone"
            android:layout_marginTop="6dp"
            tools:text="Contact No.: 7284049999"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mainBlue"
            android:id="@+id/generated_date"
            android:layout_marginTop="6dp"
            tools:text="Wed, 22 march"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mainBlue"
            android:layout_marginTop="6dp"
            android:id="@+id/client_reason"
            android:layout_marginBottom="6dp"
            tools:text="Reason: orem ipsum dolor sit amet consectetur adipisicing elit. Maxime mollitia,
molestiae quas vel sint commodi repudiandae consequuntur voluptatum laborum"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
