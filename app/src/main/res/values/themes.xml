<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpendistryBusiness" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#03045E</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="android:windowBackground">@color/windowBlue</item>
        <item name="android:navigationBarColor">@color/windowBlue</item>
        <item name="fontFamily">@font/alata</item>
    </style>

    <style name="dashBoardCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">45dp</item>
        <item name="cornerSizeBottomLeft">45dp</item>
        <item name="cardElevation">16dp</item>
        <item name="android:ambientShadowAlpha">1</item>
        <item name="android:spotShadowAlpha">1</item>
        <item name="cardBackgroundColor">@color/windowBlue</item>
    </style>

    <style name="loginCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/login_card_custom_corners</item>

    </style>

    <style name="login_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">60dp</item>
        <item name="cornerSizeTopLeft">60dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cardElevation">16dp</item>
        <item name="android:ambientShadowAlpha">1</item>
        <item name="android:spotShadowAlpha">1</item>
    </style>

    <style name="ActionBarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
<!--        <item name="android:textColorSecondary">@color/white</item>-->
        <item name="android:textColorPrimary">#000</item>
        <item name="backgroundColor">@color/material_white</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
<!--        <item name="actionMenuTextColor">@android:color/holo_green_light</item>-->
<!--        &lt;!&ndash; Tints the input fields like checkboxes and text fields &ndash;&gt;-->
        <item name="colorAccent">#fff</item>
<!--        &lt;!&ndash; Applies to views in their normal state. &ndash;&gt;-->
        <item name="colorControlNormal">#fff</item>
<!--        &lt;!&ndash; Applies to views in their activated state (i.e checked or switches) &ndash;&gt;-->
        <item name="colorControlActivated">#fff</item>
<!--        &lt;!&ndash; Applied to framework control highlights (i.e ripples or list selectors) &ndash;&gt;-->
        <item name="colorControlHighlight">#fff</item>
        <item name="android:backgroundTint">#E7F5F8</item>
    </style>


    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/design_default_color_background</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
    </style>
</resources>